@model _24DH112473_MyStore.Models.ViewModel.ProductSearchVM

@{
    ViewBag.Title = "Search Product";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
    <style>
        .search-container, .order-container {
            padding-top: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>
<body>
    <!-- Form tìm kiếm -->
    @using (Html.BeginForm("Index", "Products", FormMethod.Get))
    {
        <div class="form-group search-container">
            @Html.TextBoxFor(m => m.SearchTerm, new
            {
                @class = "form-control",
                placeholder = "Nhập tên, mô tả hoặc chủng loại sản phẩm"
            })

            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </div>
    }

    <!-- Form kết quả tìm kiếm -->
    @*
        @Html.Partial("ProductListPV", Model)
    *@
</body>
</html>