@model _24DH112473_MyStore.Models.ViewModel.ProductSearchVM
<head>
    <style>
        img {
            height: 150px;
            max-width: 150px;
        }
    </style>
</head>
@if (Model.Products != null && Model.Products.Any())
{
    <h2>DANH SÁCH SẢN PHẨM</h2>
    <table class="table bg-light">
        <tr>
            <th class="bg-light col-md-2">Hình ảnh</th>
            <th class="bg-light col-md-2">Tên sản phẩm</th>
            <th class="bg-light col-md-2">Đơn giá</th>
            <th class="bg-light col-md-2">Danh mục</th>
            <th class="bg-light col-md-4"></th>
        </tr>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.ProductImage)" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-dark" })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }, new { @class = "btn btn-dark" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-dark" })
                </td>
            </tr>
        }

    </table>
    <div class="form-froup">
        <div class="cold-md-offset-8 cold-md-4">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-dark" })
        </div>
    </div>
}
else {<p>Không tìm thấy sản phẩm nào phù hợp</p> }
<div class="form-group">
    <div class="col-md-offset-8 col-md-4">
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>