@{ // Lấy thông tin giỏ hàng
    var cart = Session["Cart"] as _24DH112473_MyStore.Models.ViewModel.Cart;

    //Tạo đối tượng ViewBag.pnmodel dùng cho PersonalMenu, vứt vào trong ViewBag,
    //để ở dưới dễ lấy ra để truyền thông tin tài khoản đăng nhập
    ViewBag.pnmodel = new _24DH112473_MyStore.Models.ViewModel.PersonalMenuVM();

    bool IsLoggedIn = User.Identity.IsAuthenticated;
    ViewBag.pnmodel.IsLoggedIn = IsLoggedIn;
    ViewBag.pnmodel.Username = User.Identity.IsAuthenticated ? User.Identity.Name : string.Empty;

    //Nếu đang không đăng nhập thì số lượng mặc định = 0, nếu đang đăng nhập thì gán cho CartCount
    if (cart == null)
    {
        ViewBag.pnmodel.CartCount = 0;
    }
    else
    {
        ViewBag.pnmodel.CartCount = cart.Items.Count();
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Store - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>*@


    <style>
        /* Basic styling for the menu */
        ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
            display: flex;
        }

        li {
            margin-right: 20px;
            position: relative;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: #f1f1f1;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }
    </style>
</head>

<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <header class="container" style="background-color:lightgreen;">
            <h4 style="text-align:center; color:green;">
                Free ship đơn từ 40k, giảm nhiều hơn cùng
                <span style="font-weight:bolder; font-style:italic;"><span style="color:blue;">FREESHIP</span> XTRA</span>
            </h4>
        </header>

        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <div class="icon-bar"><i class="fas fa-home"> @Html.ActionLink("Trang chủ", "Index", "Home")</i></div>
                    <div class="icon-bar">

                        <div class="dropdown">
                            <div style="position:relative;">
                                <i class="fas fa-user"></i>

                                <a href="javascript:void(0)" id="account-name">
                                    @if (ViewBag.pnmodel.IsLoggedIn)
                                    {
                                        <text>Hello, </text>@ViewBag.pnmodel.Username
                                    }
                                    else
                                    {
                                        <text>Tài khoản</text>
                                    }
                                </a>
                            </div>

                            <div class="dropdown-content">
                                @if (ViewBag.pnmodel.IsLoggedIn)
                                {
                                    <a href="@Url.Action("Profile", "Account")">Thông tin tài khoản</a>
                                    <a href="@Url.Action("OrderHistory", "Order")">Lịch sử mua hàng</a>
                                    <a href="@Url.Action("Logout", "Account")">Đăng xuất</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Register", "Account")">Đăng ký</a>
                                    <a href="@Url.Action("Login", "Account")">Đăng nhập</a>
                                }

                            </div>
                        </div>
                    </div>
                    <div class="icon-bar"><i class="fas fa-shopping-cart"></i>@Html.ActionLink("Giỏ hàng", "Index", "Cart")</div>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand"><img src="~/Content/Images/logo-removebg-preview.png" style="max-height:90px;" /></a>
            </div>          
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Store</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
